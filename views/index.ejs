<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    .files-container {
      margin-top: 2rem;
    }
    .file-item {
      padding: 1rem;
      margin: 0.5rem 0;
      border: 1px solid #ddd;
      border-radius: 4px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .file-item:hover {
      background-color: #f5f5f5;
    }
    .file-info {
      flex: 1;
    }
    .modal-form {
      margin: 1rem 0;
    }
    .modal-form button {
      width: 100%;
      margin: 0.5rem 0;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>
<div class="breadcrumbs">
  <a href="/">ğŸ  Home</a>
  <% breadcrumbs.forEach(folder => { %>
    / <a href="/folder/<%= folder.id %>"><%= folder.name %></a>
  <% }) %>
</div>
  <button onclick="openUploadFileModal()" class="outline">upload new file</button>
  
  <!-- Upload File Modal -->
  <dialog id="uploadFile">
    <article>
      <h3>Upload New File</h3>
      <form action="/upload" method="post" enctype="multipart/form-data">
      <input type="hidden" name="folderId" value="<%= currentFolder ? currentFolder.id : '' %>">
        <input type="file" name="avatar" />
        <button type="submit" class="secondary outline">submit</button>
      </form>
    </article>
  </dialog>
<!-- Create folder button -->
<button onclick="openCreateFolderModal()">ğŸ“ New Folder</button>

<!-- Create Folder Modal -->
<dialog id="createFolder">
  <article>
    <h3>Create New Folder</h3>
    <form action="/folder/create" method="post">
      <input type="hidden" name="parentId" value="<%= currentFolder ? currentFolder.id : '' %>">
      <input type="text" name="folderName" placeholder="Folder name" required />
      <button type="submit">Create</button>
    </form>
  </article>
</dialog>
<!-- Display folders -->
<div class="folders-container">
  <h3>Folders</h3>
  <% if (userFolders && userFolders.length > 0) { %>
<% userFolders.forEach(function(folder) { %>
    <div class="folder-item">
        <a href="/folder/<%= folder.id %>">ğŸ“ <%= folder.name || 'Unnamed Folder' %></a>
        <button onclick="openFolderOptionsModal(<%= folder.id %>)">Options</button>
    </div>

    <!-- Folder Options Modal -->
    <dialog id="folderOptionsModal-<%= folder.id %>">
        <article>
            <header>
                <h3>Folder Options: <%= folder.name || 'Unnamed Folder' %></h3>
                <button aria-label="Close" onclick="closeFolderOptionsModal(<%= folder.id %>)"></button>
            </header>
            
            <!-- Delete Form -->
            <div class="modal-form">
                <form action="/folder/<%= folder.id %>/delete" method="post" 
                      onsubmit="return confirm('Delete this folder and ALL its contents? This cannot be undone!')">
                    <button type="submit" class="contrast">ğŸ—‘ï¸ Delete Folder</button>
                </form>
            </div>
            <div class="modal-form">
                <form action="/folder/<%= folder.id %>/share" method="post">
                    <label for="duration-<%= folder.id %>">Share for:</label>
                    <select name="duration" id="duration-<%= folder.id %>" required>
                        <option value="1">1 day</option>
                        <option value="7">7 days</option>
                        <option value="30">30 days</option>
                        <option value="365">1 year</option>
                    </select>
                    <button type="submit" class="secondary">ğŸ”— Generate Share Link</button>
                </form>
            </div>
        </article>
    </dialog>
<% }); %>
  <% } %>
</div>
  <!-- Files List -->
  <div class="files-container">
    <h2>Your Files</h2>
    <% if (userFiles && userFiles.length > 0) { %>
      <% userFiles.forEach(function(file) { %>
        <div class="file-item">
          <div class="file-info">
            <strong>Name:</strong> <%= file.name || 'Unnamed File' %><br>
            <strong>Created:</strong> <%= new Date(file.createdAt).toLocaleString() %>
          </div>
          <button onclick="openOptionsModal(<%= file.id %>)" class="outline">Options</button>
        </div>

        <!-- Options Modal for each file -->
        <dialog id="optionsModal-<%= file.id %>">
          <article>
            <header>
              <h3>File Options: <%= file.name || 'Unnamed File' %></h3>
              <button aria-label="Close" rel="prev" onclick="closeOptionsModal(<%= file.id %>)"></button>
            </header>
            
            <!-- Download Form -->
            <div class="modal-form">
              <form action="/files/<%= file.id %>/download" method="get">
                <button type="submit" class="secondary">ğŸ“¥ Download</button>
              </form>
            </div>


            <!-- Move to Folder Form -->
            <div class="modal-form">
              <form action="/files/<%= file.id %>/move" method="post">
                <label for="folderId-<%= file.id %>">Select Folder:</label>
                <select name="folderId" id="folderId-<%= file.id %>" required>
                  <option value="">-- Select Folder --</option>
                  <!-- You'll need to pass folders from controller -->
                  <!-- Example: -->
                  <!-- <% if (typeof folders !== 'undefined') { %>
                    <% folders.forEach(folder => { %>
                      <option value="<%= folder.id %>"><%= folder.name %></option>
                    <% }); %>
                  <% } %> -->
                </select>
                <button type="submit" class="secondary">ğŸ“ Move</button>
              </form>
            </div>

            <!-- Delete Form -->
            <div class="modal-form">
              <form action="/files/<%= file.id %>/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this file?')">
                <button type="submit" class="contrast">ğŸ—‘ï¸ Delete</button>
              </form>
            </div>
          </article>
        </dialog>
      <% }); %>
    <% } else { %>
      <p>No files uploaded yet.</p>
    <% } %>
  </div>

  <script>
    // Upload file modal functions
    function openUploadFileModal() {
      document.getElementById('uploadFile')?.showModal();
    }
    
    function closeUploadFileModal() {
      document.getElementById('uploadFile')?.close();
    }

    // new folder modal functions
    function openCreateFolderModal() {
      document.getElementById('createFolder')?.showModal();
    }
    
    function closeCreateFolderModal() {
      document.getElementById('createFolder')?.close();
    }
    // file options modal functions
    function openOptionsModal(fileId) {
      document.getElementById(`optionsModal-${fileId}`)?.showModal();
    }
    
    function closeOptionsModal(fileId) {
      document.getElementById(`optionsModal-${fileId}`)?.close();
    }
    // folder options modal functions
     function openFolderOptionsModal(folderId) {
        document.getElementById(`folderOptionsModal-${folderId}`)?.showModal();
    }

    function closeFolderOptionsModal(folderId) {
        document.getElementById(`folderOptionsModal-${folderId}`)?.close();
    }   
    // Close on outside click
    document.querySelectorAll('dialog').forEach(dialog => {
      dialog.addEventListener('click', function(event) {
        if (event.target === this) {
          this.close();
        }
      });
    });
  </script>
</body>
</html>
